<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hoangtrongminhduc.html5.dev.myapplication.MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:background="#f2faf5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@drawable/title"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:id="@+id/tvProfile"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="Cá nhân"
                android:textColor="#f6fcfd"
                android:background="@drawable/roundborder2"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="30dp" />
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:id="@+id/lnAcc"
                android:layout_weight="5"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvOwner"
                    android:text="Nguyễn Văn A"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvID"
                    android:text="23897498743"
                    android:layout_marginTop="5dp"
                    android:textColor="#daf5ff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvUpdate"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="Cập nhật"
                android:textColor="#f6fcfd"
                android:background="@drawable/roundborder"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="30dp" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="TRẠNG THÁI"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#535353"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <GridLayout
                android:layout_gravity="center"
                android:columnCount="2"
                android:rowCount="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Ngày giờ khởi động: "
                    android:textColor="#5c5c5c"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvTimeUp"
                    android:textColor="#2e2e2e"
                    android:text="23/02/2018"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Cập nhật cuối: "
                    android:textColor="#5c5c5c"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvTimeUpdate"
                    android:textColor="#2e2e2e"
                    android:textStyle="bold"
                    android:text="14h23 \n03/03/2018 \n(12 phút trước)"
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </GridLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@drawable/border2"
                android:orientation="horizontal"
                android:weightSum="9"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <LinearLayout
                    android:layout_weight="3"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/temicon"
                        android:layout_width="30dp"
                        android:layout_height="50dp" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Nhiệt độ"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tvTem"
                            android:text="34"
                            android:textSize="30dp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="3"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/humicon"
                        android:layout_width="30dp"
                        android:layout_height="60dp" />
                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Độ ẩm"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tvHumi"
                            android:text="87"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="3"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/airicon"
                        android:layout_width="30dp"
                        android:layout_height="60dp" />
                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Không khí"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tvAirQuality"
                            android:text="20"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/border2"
                android:orientation="horizontal"
                android:weightSum="9"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <LinearLayout
                    android:layout_weight="3"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/iconwater"
                        android:layout_width="30dp"
                        android:layout_height="50dp" />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Mực nước"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tvWaterLevel"
                            android:text="34"
                            android:textSize="30dp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="3"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/iconwater2"
                        android:layout_width="30dp"
                        android:layout_height="60dp" />
                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Nồng độ"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tvWaterQuality"
                            android:text="87"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="3"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/iconcalenda"
                        android:layout_width="30dp"
                        android:layout_height="60dp" />
                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Ngày trồng"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tvDayUp"
                            android:text="20"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lncontrol"
            android:background="@drawable/border3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:background="#f1f1f1"
                android:weightSum="100"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="65dp">
                <LinearLayout
                    android:layout_weight="90"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="Bơm"
                        android:textSize="20sp"
                        android:textColor="#3b3b3b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tvSttEng"
                        android:text="Đang tắt"
                        android:textColor="#ff537e"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <Switch
                    android:id="@+id/swEngine"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:background="#582e2e2e"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="#f1f1f1"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="100">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="90"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ánh sáng"
                        android:textColor="#3b3b3b"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tvSttLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đang tắt"
                        android:textColor="#ff537e" />
                </LinearLayout>
                <Switch
                    android:id="@+id/swLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="10" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="#f1f1f1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Chế độ"
                        android:textColor="#3b3b3b"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvControl"
                            android:text="Tự động"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="#228B22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <Switch
                            android:id="@+id/swControl"
                            android:checked="true"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:background="#582e2e2e"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
                <TextView
                    android:text="Mực nước"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edtWater"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:enabled="false"
                        android:hint="Mực nước bật bơm"
                        android:inputType="numberDecimal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="Bật đèn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Spinner
                            android:id="@+id/timePicker1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <Spinner
                            android:id="@+id/timePicker2"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text=" - "
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <Spinner
                            android:id="@+id/timePicker3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <Spinner
                            android:id="@+id/timePicker4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvUpdateMode"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="Cập nhật"
                        android:textColor="#f6fcfd"
                        android:background="@drawable/roundborder"
                        android:gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="30dp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/tvDetail"
            android:text="XEM ĐÁNH GIÁ CHI TIẾT"
            android:textStyle="bold"
            android:textColor="#f6fcfd"
            android:background="@drawable/roundborder"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />
    </LinearLayout>
</ScrollView>
