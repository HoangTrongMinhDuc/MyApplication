<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.hoangtrongminhduc.html5.dev.myapplication.MainActivity">

    <RelativeLayout
        android:background="#bcd0f7"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:id="@+id/lnAcc"
            android:layout_weight="5"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvOwner"
                android:text="Nguyễn Văn A"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvID"
                android:text="23897498743"
                android:layout_marginTop="5dp"
                android:textColor="#daf5ff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvUpdate"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="Cập nhật"
            android:textColor="#426673"
            android:background="#00b6ff"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="30dp" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Trạng thái"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#990047"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <GridLayout
            android:columnCount="2"
            android:rowCount="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Mực nước: "
                android:layout_gravity="right"
                android:textColor="#990047"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvWater"
                android:layout_gravity="left"
                android:textColor="#990047"
                android:text="11mm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:text="Thời gian bật đèn: "
                android:textColor="#990047"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvLightTime"
                android:textColor="#990047"
                android:text="10h20p"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Ngày giờ khởi động: "
                android:textColor="#990047"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvTimeUp"
                android:textColor="#990047"
                android:text="23/02/2018"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Cập nhật cuối: "
                android:textColor="#990047"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvTimeUpdate"
                android:textColor="#990047"
                android:text="14h23 \n03/03/2018 \n(12 phút trước)"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </GridLayout>
        <LinearLayout
            android:background="#e5bfff82"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="9"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Nhiệt độ"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvTem"
                    android:text="34"
                    android:textSize="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Độ ẩm"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvHumi"
                    android:text="87%"
                    android:textSize="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Ngày trồng"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvDayUp"
                    android:text="20"
                    android:textSize="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="#f1f1f1"
        android:weightSum="100"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <LinearLayout
            android:layout_weight="90"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:text="Ánh sáng"
                android:textSize="20sp"
                android:textColor="#3b3b3b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvSttLight"
                android:text="Đang tắt"
                android:textColor="#ff537e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Switch
            android:id="@+id/swLight"
            android:layout_weight="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="#f1f1f1"
        android:weightSum="100"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <LinearLayout
            android:layout_weight="90"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:text="Bơm"
                android:textSize="20sp"
                android:textColor="#3b3b3b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvSttEng"
                android:text="Đang tắt"
                android:textColor="#ff537e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Switch
            android:id="@+id/swEngine"
            android:layout_weight="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="#f1f1f1"
        android:weightSum="100"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <LinearLayout
            android:layout_weight="90"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:text="Quạt gió"
                android:textSize="20sp"
                android:textColor="#3b3b3b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvSttFan"
                android:text="Đang tắt"
                android:textColor="#ff537e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Switch
            android:id="@+id/swFan"
            android:layout_weight="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tvDetail"
        android:text="XEM ĐÁNH GIÁ CHI TIẾT"
        android:textColor="#3880cc"
        android:background="#e2e2e2"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</LinearLayout>
